<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login"
    android:layout_height="match_parent"
    tools:context=".Buy_activation_key_Activity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginStart="2dp"
        android:id="@+id/back"
        android:backgroundTint="@color/lavender"
        android:layout_marginBottom="3dp"
        android:src="@drawable/baseline_arrow_circle_left_24"/>
    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp"
    android:background="@drawable/ustom_edittext">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_gravity="center_horizontal"
        android:padding="24dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activation Key"
            android:id="@+id/loginText"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/purple"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/usernam"
            android:textSize="12dp"
            android:background="@drawable/ustom_edittext"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="Username"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="40dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/buyButton"
            android:text="BUY"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="40dp"
            android:textSize="18sp"
            android:background="@drawable/login_button_bk"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/purple"
            app:cornerRadius = "20dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="What is activation Key ?  "
        android:textSize="14sp"
        android:drawableRight="@drawable/baseline_key_24"
        android:id="@+id/signupText_what_activation"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="Check Application"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/signupText_check_app"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="20dp"/>


</LinearLayout>