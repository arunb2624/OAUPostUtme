<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Account_Restult.year1_result">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/toolBarss"
        android:background="#F76543A3">


        <ImageView
            android:id="@+id/home_year_15_re"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true"

            android:src="@drawable/baseline_arrow_back_24" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student result"

            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            />






    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/toolBarss"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="32dp"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:background="@drawable/roundss"
    >


        <TextView android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#F76543A3"
            android:id="@+id/schoolnaem"
            android:text="O.A.U POST-UTME SCREENING RESULT  GRADE "
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"


            />

        <TextView android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="13dp"
            android:layout_gravity="start"
            android:id="@+id/student_name"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="femi ademiye"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"


            />

        <TextView android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:layout_gravity="start"
            android:textColor="@color/black"
            android:id="@+id/student_phone_number"
            android:gravity="start"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            android:text="09054931484r4"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"


            />


        <TextView android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:layout_gravity="start"
            android:textColor="@color/black"
            android:id="@+id/gender"
            android:gravity="start"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            android:text="male"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"


            />


        <TextView android:layout_height="40dp"
            android:layout_width="40dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:id="@+id/student_score"
            android:gravity="center"
            android:background="@drawable/circl"
            android:textAlignment="center"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"

            android:text="33"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"


            />


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:elevation="5dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/roundss">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:orientation="horizontal">



                <TextView android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:text="Topic"
                    android:id="@+id/student_topic"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"


                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:orientation="horizontal">



                <TextView android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:id="@+id/total_ques"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:text="Total question"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"


                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/total_time"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"

                    android:layout_marginBottom="4dp"

                    android:layout_marginTop="5dp"
                    android:text="sunday"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"


                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/grade"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="5dp"
                    android:text="sunday"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="15dp"


                    />



            </LinearLayout>
        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="15dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="8dp"

            android:orientation="horizontal"            
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:elevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/mark"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aggreagate"
                        android:textSize="10dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/correct_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="9"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="8dp"
                android:elevation="8dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/wrong"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wrong"
                        android:textSize="10dp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textSize="12dp"
                        android:id="@+id/wrong_select"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/red"
                        android:textStyle="bold"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:elevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="8dp"
                        android:tint="@color/black"
                        android:src="@drawable/time"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textSize="10dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/total_time_all_time_togetther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="23min"
                        android:textAlignment="center"
                        android:textColor="#F76543A3"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>


    </LinearLayout>
        
        

    </ScrollView>

</RelativeLayout>